{
    "name": "ifood/integration",
    "description": "A PHP project for integrating with the iFood API.",
    "type": "project",
    "require": {
        "php": "^7.4 || ^8.0",
        "guzzlehttp/guzzle": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "installer-paths": {
            "public/": [
                "type:project"
            ]
        }
    },
    "post-install-cmd": [
        "chown -R www-data:www-data /var/www/html",
        "chmod -R 755 /var/www/html"
    ],
    "post-update-cmd": [
        "chown -R www-data:www-data /var/www/html",
        "chmod -R 755 /var/www/html"
    ],
    "build": {
        "commands": [
            "a2enmod rewrite"
        ]
    }
}